<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved"
    android:id="@+id/bottomSheet"
    android:padding="10dp"
    >
<!--    app:cardCornerRadius="4dp">-->

    <TextView
        android:id="@+id/idbandname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/bandlogo"
        android:text="Band Name"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bandlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idbandname"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@drawable/iconeventhub" />

    <TextView
        android:id="@+id/idbandDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idbandname"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@id/bandlogo"
        android:layout_toRightOf="@id/bandlogo"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/idBtnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/bandlogo"
        android:weightSum="2">

        <Button
            android:id="@+id/editbtn"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/light_blue_900"
            android:text="Edit Band"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/viewbtn"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/light_blue_900"
            android:text="View Band"
            android:textAllCaps="false" />
    </LinearLayout>



</RelativeLayout>